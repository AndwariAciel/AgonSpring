<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1180.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.andwari.agon.app.controller.EventPageController">
    <top>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Button fx:id="btnPrevRound" mnemonicParsing="false" onAction="#goToPreviousRound" text="%event.event.btnPrev">
                <FlowPane.margin>
                    <Insets />
                </FlowPane.margin>
            </Button>
            <Label fx:id="lbRound" text="%event.event.roundheadline" textAlignment="CENTER">
                <FlowPane.margin>
                    <Insets left="200.0" right="200.0" />
                </FlowPane.margin>
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <Button fx:id="btnNextRound" mnemonicParsing="false" onAction="#goToNextRound" text="%event.event.btnNext" />
        </FlowPane>
    </top>
    <bottom>
        <BorderPane prefHeight="180.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <fx:include fx:id="matchView" source="views/match-view.fxml" />
            </center>
            <right>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <Button alignment="CENTER" mnemonicParsing="false" onAction="#finishRound" text="%event.event.finishround">
                        <VBox.margin>
                            <Insets bottom="20.0" />
                        </VBox.margin>
                    </Button>
                    <FlowPane alignment="CENTER" minWidth="200.0" prefWidth="200.0">
                        <Button mnemonicParsing="false" onAction="#finishEvent" text="Finish Event">
                            <FlowPane.margin>
                                <Insets bottom="20.0" />
                            </FlowPane.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#reopenEvent" text="Reopen Event">
                            <FlowPane.margin>
                                <Insets bottom="20.0" left="10.0" />
                            </FlowPane.margin>
                        </Button>
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                    </FlowPane>
                    <Button mnemonicParsing="false" onAction="#revokeRound" text="Reset Round" />
                    <BorderPane.margin>
                        <Insets right="60.0" />
                    </BorderPane.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </VBox>
            </right>
        </BorderPane>
    </bottom>
    <right>
        <FlowPane alignment="CENTER" maxHeight="1.7976931348623157E308" minHeight="-Infinity" BorderPane.alignment="CENTER">
            <TableView fx:id="listViewOfStandings" maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefWidth="350.0">
                <columns>
                    <TableColumn fx:id="tcStandingRank" prefWidth="30.0" text="#" />
                    <TableColumn fx:id="tcStandingPlayer" minWidth="200.0" prefWidth="225.0" text="%event.standing.player" />
                    <TableColumn fx:id="tcStandingScore" prefWidth="60.0" text="%event.standing.games" />
                    <TableColumn fx:id="tcStandingPoints" prefWidth="30.0" text="%event.standing.points" />
                </columns>
            <FlowPane.margin>
               <Insets bottom="10.0" />
            </FlowPane.margin>
            </TableView>
            <Button mnemonicParsing="false" onAction="#showDetails" text="Details / Drop Player">
                <FlowPane.margin>
                    <Insets top="10.0" />
                </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#selectPlayer" text="Add Player">
                <FlowPane.margin>
                    <Insets left="10.0" top="10.0" />
                </FlowPane.margin>
            </Button>
        </FlowPane>
    </right>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <bottom>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <Label text="Bye:">
                        <HBox.margin>
                            <Insets left="100.0" />
                        </HBox.margin>
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <Label fx:id="lbBye" text="-">
                        <font>
                            <Font size="18.0" />
                        </font>
                        <HBox.margin>
                            <Insets left="20.0" />
                        </HBox.margin>
                    </Label>
                </HBox>
            </bottom>
            <center>
                <ListView fx:id="listViewOfMatches" maxHeight="-Infinity" maxWidth="600.0" prefWidth="500.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </BorderPane.margin>
                </ListView>
            </center>
        </BorderPane>
    </center>
</BorderPane>
