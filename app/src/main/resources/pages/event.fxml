<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1180.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.andwari.agon.app.controller.EventPageController">
    <top>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Button fx:id="btnPrevRound" mnemonicParsing="false" onAction="#goToPreviousRound" text="%event.event.btnPrev">
                <FlowPane.margin>
                    <Insets />
                </FlowPane.margin>
            </Button>
            <Label fx:id="lbRound" text="%event.event.roundheadline" textAlignment="CENTER">
                <FlowPane.margin>
                    <Insets left="200.0" right="200.0" />
                </FlowPane.margin>
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <Button fx:id="btnNextRound" mnemonicParsing="false" onAction="#goToNextRound" text="%event.event.btnNext" />
        </FlowPane>
    </top>
    <bottom>
        <BorderPane prefHeight="180.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <fx:include fx:id="matchView" source="views/match-view.fxml" />
            </center>
            <right>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                  <Button mnemonicParsing="false" onAction="#showDetails" text="%event.event.details" />
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
                  <children>
                          <Button fx:id="btnFinishRound" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#finishRound" text="%event.event.finishround" />
                           <Button fx:id="btnFinishEvent" disable="true" mnemonicParsing="false" onAction="#finishEvent" text="%event.event.finishEvent">
                        <HBox.margin>
                           <Insets bottom="20.0" left="20.0" top="20.0" />
                        </HBox.margin>
                           </Button>
                  </children>
               </HBox>
                    <Button mnemonicParsing="false" onAction="#revokeRound" text="%event.event.reset" />
                    <BorderPane.margin>
                        <Insets right="60.0" />
                    </BorderPane.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </VBox>
            </right>
        </BorderPane>
    </bottom>
    <right>
        <FlowPane alignment="CENTER" maxHeight="1.7976931348623157E308" minHeight="-Infinity" BorderPane.alignment="CENTER">
            <TableView fx:id="listViewOfStandings" maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefWidth="350.0">
                <columns>
                    <TableColumn fx:id="tcStandingRank" prefWidth="30.0" text="#" />
                    <TableColumn fx:id="tcStandingPlayer" minWidth="197.0" prefWidth="197.0" text="%event.standing.player" />
                    <TableColumn fx:id="tcStandingScore" prefWidth="74.0" text="%event.standing.games" />
                    <TableColumn fx:id="tcStandingPoints" prefWidth="44.0" text="%event.standing.points" />
                </columns>
            <FlowPane.margin>
               <Insets bottom="10.0" />
            </FlowPane.margin>
            </TableView>
        </FlowPane>
    </right>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <ListView fx:id="listViewOfMatches" maxHeight="-Infinity" maxWidth="600.0" prefWidth="500.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </BorderPane.margin>
                </ListView>
            </center>
        </BorderPane>
    </center>
</BorderPane>
